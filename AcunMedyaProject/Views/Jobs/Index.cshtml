@model List<AcunMedyaProject.Models.Tbl_Job>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Burası İş Sayfası</h2>

<div class=" container"></div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>JobID</th>
            <th>Başlık</th>
            <th>Başlangıç Tarihi</th>
            <th>Bitiş Tarihi</th>
            <th>Açıklama</th>
            <th>Güncelle</th>
            <th>Sil</th>
        <tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var item in Model)
           
            {
                <td>@item.JobID</td>
                <td>@item.Title</td>
                 <td>@item.EndDate</td>
                <td>@item.CompanyName</td>
                <td>@item.Description</td>

                <td><a href="#" class="btn btn-success">Güncelle</a></td>
                <td><a href="/Job/DeleteJob/@item.JobID" class="btn btn-dark">Sil</a></td>

            }
         </tbody>
    </table>
    <a href="/About/CreateAbout/" class="btn btn-success">Oluştur</a>
</div>
