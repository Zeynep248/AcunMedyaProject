@model List<AcunMedyaProject.Models.Tbl_Project>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Proje Sayfası</h2>

<div class=" container"></div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ProjeID</th>
            <th>Proje İsmi</th>
            <th>Açıklama</th>
            <th>Proje Url</th>
            <th>Resim1</th>
            <th>Resim2</th>
            <th>Resim3</th>
            <th>KategoriID</th>
            <th>Güncelle</th>
            <th>Sil</th>
        <tr>
    </thead>
    <tbody>
        @foreach (var item in Model)

        {
            <tr>
                <td>@item.ProjectID</td>
                <td>@item.ProjectName</td>
                <td>@item.Description</td>
                <td>@item.ProjectUrl</td>
                <td>@item.Image1</td>
                <td>@item.Image2</td>
                <td>@item.Image3</td>
                <td>@item.CategoryID</td>
                <td><a href="#" class="btn btn-success">Güncelle</a></td>
                <td><a href="/Project/DeleteProject/@item.ProjectID" class="btn btn-dark">Sil</a></td>

            </tr>
        }
    <tbody>
</table>
<a href="/Project/CreateProject/" class="btn btn-success">Oluştur</a>
</div>

