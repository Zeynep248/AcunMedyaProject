@model List<AcunMedyaProject.Models.Tbl_Message>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Burası Mesaj Sayfası</h2>


<div class=" container"></div>
<table class="table table-bordered">
    <thead>
        <tr>
               <th>MesajID</th>
               <th>İsim Soyisim</th>
               <th>Mail</th>
               <th>Nesne</th>
            <th>Mesaj İletişim</th>
            <th>Güncelle</th>
            <th>Sil</th>
        <tr>
    </thead>
    <tbody>
        <tr>


            @foreach (var item in Model)
            {
                <td>@item.MessageID</td>
                <td>@item.NameSurname</td>
                <td>@item.Mail</td>
                <td>@item.Subject</td>
                <td>@item.MessageContent</td>
                <td><a href="#" class="btn btn-success">Güncelle</a></td>
                <td><a href="/About/DeleteAbout/@item.MessageID" class="btn btn-dark">Sil</a></td>
            }


     </tbody>
  </table>
  <a href="/Message/CreateMessage/" class="btn btn-success">Oluştur</a>
</div>
