@model List<AcunMedyaProject.Models.Tbl_Slider>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Slider Sayfası</h2>


<div class=" container"></div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>SliderID</th>
            <th>NameSurname</th>
            <th>Description</th>
            <th>Image Url</th>
            <th>Güncelle</th>
            <th>Sil</th>
        <tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var item in Model)
            {
                <td>@item.SliderID</td>
                <td>@item.NameSurname</td>
                <td>@item.Description</td>
                <td>@item.ImageUrl</td>
                <td><a href="#" class="btn btn-success">Güncelle</a></td>
                <td><a href="/Slider/DeleteSlider/@item.SliderID" class="btn btn-dark">Sil</a></td>
            }


</tbody>
    </table>
    <a href="/Slider/CreateSlider/" class="btn btn-success">Oluştur</a>
    </div>


