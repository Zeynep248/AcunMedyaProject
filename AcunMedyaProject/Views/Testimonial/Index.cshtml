@model List<AcunMedyaProject.Models.Tbl_Testimonial>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Burası Referanslar Sayfası</h2>

<div class="container">
    <!-- First table -->
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>TestimonialID</th>
                <th>Description1</th>
                <th>TestimonialName</th>
                <th>Description2</th>
                <th>ImageUrl</th>
                <th>Title</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TestimonialID</td>
                    <td>@item.Description1</td>
                    <td>@item.TestimonialName</td>
                    <td>@item.Description2</td>
                    <td><img src="@item.ImageUrl" style="width:50px" /></td>
                    <td>@item.Title</td>
                    <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-dark">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Space between tables -->
    <hr />

    <!-- Second table (or additional content, if needed) -->
    <!-- Add any other content or tables here if necessary -->

    <a href="/Testimonial/CreateTestimonial/" class="btn btn-success">Oluştur</a>
</div>